---
const {color,idx} = Astro.props;
---
<section class="landing-section relative h-screen w-full overflow-hidden"  data-header-color={color} data-header-id={idx}>
        <div class="absolute w-full h-full flex flex-col z-20 text-center">
            <header class={`flex-grow w-full pt-[85px] text-${color}`}>
                <slot name="title"/>
                <slot name="subtitle"/>
            </header>
            <footer class="flex-grow w-full flex flex-colum justify-center items-end">
                <div class="w-full mb-[5em]">
                    <slot name="footer"/>
                </div>
            </footer>
        </div>
    <div class="absolute top-0 bottom-0 w-full">
        <slot name="background"/>
    </div>
    <div class="absolute bottom-3 text-gray-800 text-center w-full">
        <slot name="button"/>
    </div>
</section>
